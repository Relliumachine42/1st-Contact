@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12 col-md-6">
        <div class="ms-5">
            <h1 class="heroTitle">Your <span class="texthighlight">1st</span> stop for every <span class="texthighlight">Contact</span></h1>
