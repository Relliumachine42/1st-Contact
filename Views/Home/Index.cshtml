                        <img src="https://devicons.railway.app/i/bootstrap.svg" class="imgicon" />
                        <figcaption>Bootstrap</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/railway-dark.svg" class="imgicon" />
                        <figcaption>Railway</figcaption>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <img src="~/img/1stContact.png" class="img-fluid" />
    </div>
    <div class="col-12">
        <div class="row mt-5">
            <div class="col-12 btn text-center">
                <a class="btn btn-lg btn-outline-primary rounded-pill px-5" style="height:min-content" asp-controller="Contacts" asp-action="Index">Get Started!</a>
            </div>
        </div>
    </div>
